#include <stdio.h>

int main() {
    int n, num = 1;
    scanf("%d", &n);

    for (int row = 1; row <= n; row++) {
        for (int col = 1; col <= n; col++) {
           
            if (row == 1 || row == n || col == 1 || col == n) {
                printf("%-4d", num); 
            } else {
                printf("       ");    
            }
            num++; 
        }
        printf("\n");
    }

    return 0;
}
